apt:
  libx11-dev
  libxext-dev
  libxft-dev
  libxinerama-dev
  libxrandr-dev
  libxss-dev

github-patches:
  .github/workflows/haskell-ci-dependabot.patch
  .github/workflows/haskell-ci-hackage.patch

raw-project
  optimization: False
  package xmonad-contrib
    flags: +pedantic
    ghc-options: -j

-- avoid --haddock-all which overwrites *-docs.tar.gz with tests docs
haddock-components: libs
