super + shift + s
	scrot -s /home/toyat/Pictures/$(date +%Y-%m-%d-%H_%M-%S).jpg

super + shift + f
	scrot /home/toyat/Pictures/$(date +%Y-%m-%d-%H_%M-%S).jpg

XF86AudioRaiseVolume
	amixer set Master 4%+

XF86AudioLowerVolume
	amixer set Master 4%-

XF86AudioMute
	amixer set Master toggle && amixer set Speaker on && amixer set Headphone on

XF86MonBrightnessUp
	light -A 5

XF86MonBrightnessDown
	light -U 5
